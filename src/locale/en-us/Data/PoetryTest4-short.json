                            "AUTHOR": "Emily Bright",
                            "CONTENT": [
                                "The dawn breaks with a whisper,",
                                "Soft and tender, pure and light,",
                                "Casting hues of gold and amber,",
                                "Turning dark to bright."
                            ]
                        },
                        {
                            "DOCID": "wodx:msxx",
                            "TITLE": "Morning Song",
                            "AUTHOR": "Emily Bright",
                            "CONTENT": [
                                "Birds sing their morning song,",
                                "As the day begins anew,",
                                "The sky a canvas stretching long,",
                                "Painted in shades of blue."
                            ]
                        }
                    ]
                }
            ]
        },
