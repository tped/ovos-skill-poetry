                            "AUTHOR": "John Doe",
                            "CONTENT": [
                                "Time flows like a gentle stream,",
                                "Forever onward, never still,",
                                "A tapestry of dreams and dreams,",
                                "Woven with a silent thrill."
                            ]
                        },
